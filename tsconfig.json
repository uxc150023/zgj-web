{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // "lib": ["ESNext", "DOM"],
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.promise",
      "ScriptHost",
      "es2019"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~@/*": ["src/*"],
      "~*": ["node_modules/*"]
    },
    "types": ["vite/client"] // 同vite-env第一行
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    ".eslintrc.cjs"
  ]
}
